= content_tag_for :tr, f.object do
  %td
    %p
      = f.label :label
      = f.text_field :label, class: 'input-xlarge'
    
    %p
      = f.label :type
      = f.collection_select :type, ForMash::Input::TYPES, :to_s, :to_s
    %p
      = f.label :predefined_values
      = f.text_field :predefined_values, value: f.object.predefined_values.join(', '), placeholder: 'Value 1, Value 2, Value 3, ...', class: 'input-xlarge'
    
    %p
      = f.label :required, class: 'checkbox' do
        = f.check_box :required, class: 'input-xlarge'
        Required?
              
  %td.center-aligned.middle-aligned
    = f.link_to_remove_fields :inputs, class: 'btn btn-mini btn-danger' do
      %i.icon-minus-sign.icon-white
